
@{
    ViewData["Title"] = "thanh toan";
    Layout = "~/Views/Shared/Layout_Sanpham.cshtml";
}
@ViewData["Message"];




@using (Html.BeginForm("ThanhToan", "Cart", FormMethod.Post))
{


    <div class="container">
        <div class="heading"><h2>Thông Tin Khách Hàng</h2></div>
        <form name="form2" id="ff2" method="post" action="register.php">
            <div class="form-group">
                <input name="shipName" class="form-control" placeholder="Name :" required>
            </div>

            <div class="form-group">
                <input name="address" class="form-control" placeholder="Address :" required>
            </div>

            <div class="form-group">
                <label>Phone Number : @(ViewBag.phoneNumber ?? "None")</label>
                @if (ViewBag.phoneNumber == null)
                {
                    <a asp-controller="ManageAccount" asp-action="ManageAccount" class="btn-link btn-bracketed">[Go to Manage Acccount]</a>
                }
            </div>

            <span class="text-danger">@ViewBag.NoPhoneNumber</span>
            <button type="submit" class="btn btn-1">Submit</button>
            <br />
            <br />
            <br />
        </form>

    </div>

}
