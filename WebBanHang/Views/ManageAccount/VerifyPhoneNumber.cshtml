
@{
    ViewData["Title"] = "Manage your account";
    Layout = "~/Views/Shared/Layout_3.cshtml";
}
@model WebBanHang.ViewModels.VerifyPhoneNumberViewModel

<div id="page-content" class="single-page">
    <div class="container">

        <div class="row">
            <div class="col-md-6">
                <div class="heading"><h2>Verify Phone Number</h2></div>
                <form asp-action="VerifyPhoneNumber" method="post">
                    <input asp-for="PhoneNumber" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" required />
                        <span asp-validation-for="Code" class="textdanger"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="textdanger"></div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btndefault" />
                    </div>
                    <a asp-action="ManageAccount" class="btn-link">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
