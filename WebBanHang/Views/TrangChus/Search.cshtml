@model IEnumerable<WebBanHang.Models.HangHoa>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/Layout_Sanpham.cshtml";
}



<h3><a asp-action="TimKiem" asp-controller="TrangChus">Tìm kiếm nâng cao</a></h3>
<h2>Search</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Tên Sản Phẩm
            </th>
            <th>
                Ảnh
            </th>

            <th>
                Giá
            </th>

            <th>
                Giảm giá
            </th>

            <th>
                Loại Sản Phẩm
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-route-mahh="@item.MaHH">@item.TenHH</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-mahh="@item.MaHH">
                    <img src="~/Hinh/@item.Hinh" width="50" height="50" />
                </a>
            </td>

            <td>
                @(Html.DisplayFor(modelItem => item.DonGia))VND
            </td>

            <td>
                @(Html.DisplayFor(modelItem => item.GiamGia))%
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Loai.TenLoai)
            </td>

        </tr>
        }
    </tbody>
</table>