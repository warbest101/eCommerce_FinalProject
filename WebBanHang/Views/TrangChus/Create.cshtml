@model WebBanHang.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/Layout_3.cshtml";
}



<div id="page-content" class="single-page">
    <div class="container">
        
        <div class="row">
            <div class="col-md-6">
                <div class="heading"><h2>Tạo tài khoản</h2></div>
                <form asp-action="Create">

                    <div class="form-group">
                        <label asp-for="UserName" class="control-label">Username</label>
                        <input asp-for="UserName" class="form-control" required />
                        <div class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" required />
                        <div class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" required  type="password"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <button type="submit" class="btn btn-1" name="login" id="login">Đăng ký</button>
                </form>

            </div>
        </div>
    </div>
</div>