@{
    ViewData["Title"] = "Verify Code";
    Layout = "~/Views/Shared/Layout_3.cshtml";
}

@model WebBanHang.ViewModels.VerifyCodeViewModel


<div id="page-content" class="single-page">
    <div class="container">

        <div class="row">
            <div class="col-md-6">
                <div class="heading"><h2>Verify Code</h2></div>
                <form asp-action="VerifyCode" method="post">
                    <div class="form-group">
                        <label class="control-label">A Code has been send. Please type in to complete Login Authentication</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Code</label>
                        <input asp-for="Code" class="form-control"/>
                        <span asp-validation-for="Code" class="textdanger"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="textdanger"></div>
                    <div class="form-group">
                        <input type="submit" value="Verify" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
